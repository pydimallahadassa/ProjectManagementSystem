package com.tasks.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;

import com.tasks.entity.Task;
import com.tasks.repository.ITaskRepository;

@Service
public class TaskServiceImpl implements ITaskService {
	
	@Autowired
	ITaskRepository taskRepo;

	@Override
	public Task addTask(Task task) {
		Task newTask = taskRepo.save(task);
		return newTask;
	}

	@Override
	public Task updateTask(int taskId, Task task) {
		Optional<Task> t1 = taskRepo.findById(taskId);
		Task updatedTask = t1.get();
		taskRepo.save(task);
		return updatedTask;
	}

	@Override
	public Task deleteTask(int taskId) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Task getTaskById(int taskId) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public List<Task> getAllTasks() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Task getTaskByEmp(String emp) {
		// TODO Auto-generated method stub
		return null;
	}

}
